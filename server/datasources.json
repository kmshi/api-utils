{
  "db": {
    "name": "db",
    "url":"${MONGODB_URL}",
    "connector": "mongodb",
    "host": "127.0.0.1",
    "port": 27017,
    "database": "accounts"
  },
  "transient": {
    "name": "transient",
    "connector": "transient"
  },
  "account_rest": {
    "baseURL": "${ACCOUNT_SERVICE_BASEURL}",
    "name": "account_rest",
    "connector": "rest",
    "debug": true,
    "options": {
      "headers": {
        "accept": "application/json",
        "content-type": "application/json"
      },
      "auth": {
        "user": "admin",
        "pass": "supersecret",
        "sendImmediately": true
      },
      "strictSSL": false
    }
  },
  "rule_rest": {
    "name": "rule_rest",
    "connector": "rest",
    "debug": true,
    "options": {
      "headers": {
        "accept": "application/json",
        "content-type": "application/json"
      },
      "auth": {
        "user": "admin",
        "pass": "supersecret",
        "sendImmediately": true
      },
      "strictSSL": false
    },
    "operations":[
      {
        "template": {
          "method": "GET",
          "url": "{!url}",
          "headers": {
            "accept": "application/json",
            "content-type": "application/json"
          },
          "query": "{query}"
        },
        "functions": {
          "rule": ["url", "query"]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "{!url}",
          "headers": {
            "accept": "application/json",
            "content-type": "application/json"
          },
          "query": "{query}",
          "body": "{body}"
        },
        "functions": {
          "updateRule": ["url", "body", "query"]
        }
      }
    ]
  }
}
